<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capeltic">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_tutorial_btn_previous"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_tutorial_btn_next"
        android:layout_marginBottom="50dp"
        android:onClick="firstFrg"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_tutorial_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="lastFrg"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/activity_tutorial_btn_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_tutorial_btn_previous" />


</androidx.constraintlayout.widget.ConstraintLayout>